<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_93_dip">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/dimen_93_dip"
       android:layout_marginLeft="@dimen/dimen_15_dip">
       <ImageView
           android:id="@+id/iv_skill_actor"
           android:layout_width="@dimen/dimen_60_dip"
           android:layout_height="@dimen/dimen_60_dip"
           android:layout_centerVertical="true"
           android:background="@drawable/shape_meihong"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_toRightOf="@+id/iv_skill_actor"
           android:layout_marginLeft="@dimen/dimen_10_dip"
           android:layout_centerVertical="true">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="去西藏 一起"
               android:textSize="15sp"
               android:textColor="@color/c_127_130_134"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/dimen_9_dip"
               android:textSize="12sp"
               android:textColor="@color/c_127_130_134"
               android:text="0.01元"/>
       </LinearLayout>

       <ImageView style="@style/info_style_jiantou"/>

       <View style="@style/divide_line"
           android:layout_alignParentBottom="true"
           android:layout_marginLeft="@dimen/dimen_0_dip"/>
   </RelativeLayout>
</RelativeLayout>