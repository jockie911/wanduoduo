<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        style="@style/mw"
        android:background="#19232d">
        <include layout="@layout/head_info"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_137_dip">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/ll_account_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textSize="24sp"
                        android:textColor="@color/c_255_233_103"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="账户余额"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_8_dip"/>
                    <ImageView
                        android:layout_width="@dimen/dimen_69_dip"
                        android:layout_height="@dimen/dimen_24_dip"
                        android:background="@drawable/info_chongzhi"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dimen_11_dip"
                        />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true">
                    <RelativeLayout
                        android:id="@+id/rel_play_coin"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0_dip"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/icon_play"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/info_play"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:layout_width="@dimen/dimen_50_dip"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toRightOf="@+id/icon_play"
                            android:layout_marginLeft="@dimen/dimen_16_dip"
                            android:layout_centerVertical="true"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/wan_bi"
                                android:textSize="15sp"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/tv_coin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="15sp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/c_255_233_103"
                                android:gravity="center_horizontal"/>
                        </LinearLayout>
                    </RelativeLayout>

                  <!--  <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0.5_dip"
                        android:layout_marginRight="@dimen/dimen_24_dip"
                        android:background="@color/divide_line_info_info"/>-->
                    <RelativeLayout
                        android:id="@+id/rel_coupons"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0_dip"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/icon_coipons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/info_coupons"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toRightOf="@+id/icon_coipons"
                            android:layout_marginLeft="@dimen/dimen_16_dip"
                            android:layout_centerVertical="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/you_hui_quan"
                                android:textSize="15sp"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/tv_conpous"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:layout_gravity="center_horizontal"
                                android:textSize="15sp"
                                android:textColor="@color/c_255_233_103"
                                android:gravity="center_horizontal"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_5_dip"
            android:background="@color/bgcolor_deep"/>

        <RelativeLayout
            android:id="@+id/info_rel_msg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45_dip">
            <TextView
                style="@style/info_style_textdrawable"
                android:text="@string/xiao_xi"
                android:drawableLeft="@drawable/info_msg" />
            <ImageView style="@style/info_style_jiantou" />

            <TextView
                android:id="@+id/tv_msg_count"
                android:layout_width="@dimen/dimen_20_dip"
                android:layout_height="@dimen/dimen_20_dip"
                android:background="@drawable/rc_unread_count_bg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/dimen_30_dip"/>
            <View style="@style/divide_line_info" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info_rel_myserver"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45_dip">
            <TextView
                style="@style/info_style_textdrawable"
                android:text="@string/wo_gou_mai_de_fu_wu"
                android:drawableLeft="@drawable/info_my_buy_service" />
            <ImageView style="@style/info_style_jiantou" />
            <View style="@style/divide_line_info" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_vip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45_dip">
            <TextView
                style="@style/info_style_textdrawable"
                android:text="@string/hui_yuan_zhong_xin"
                android:drawableLeft="@drawable/info_vip_center" />
            <TextView android:id="@+id/tv_vip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/info_jiantou_right"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/c_208_210_211"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/dimen_15_dip"/>
            <ImageView
                android:id="@+id/iv_vip_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_vip"
                android:layout_marginRight="@dimen/dimen_5_dip" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_5_dip"
            android:background="#1d2731"/>

        <RelativeLayout
            android:id="@+id/info_rel_like"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45_dip">
            <TextView
                style="@style/info_style_textdrawable"
                android:text="@string/xi_huan_de_ren"
                android:drawableLeft="@drawable/info_love" />
            <ImageView style="@style/info_style_jiantou" />
            <View style="@style/divide_line_info" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info_rel_watch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45_dip">
            <TextView
                style="@style/info_style_textdrawable"
                android:text="@string/shui_kan_guo_wo"
                android:drawableLeft="@drawable/info_watch" />
            <ImageView style="@style/info_style_jiantou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_5_dip"
            android:background="#1d2731"/>

        <RelativeLayout
            android:id="@+id/rel_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45_dip">
            <TextView
                android:id="@+id/tv_setting"
                style="@style/info_style_textdrawable"
                android:text="@string/setting"
                android:drawableLeft="@drawable/info_setting" />
            <ImageView style="@style/info_style_jiantou" />
            <View style="@style/divide_line_info" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_share"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45_dip">
            <TextView
                android:id="@+id/tv_share"
                style="@style/info_style_textdrawable"
                android:text="@string/fen_xiang_you_li"
                android:drawableLeft="@drawable/info_share" />
            <ImageView style="@style/info_style_jiantou" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>