<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_order_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/c_mei_hong"
        app:tabSelectedTextColor="@color/c_mei_hong"
        app:tabTextColor="@color/c_65_75_85"
        app:tabTextAppearance="@style/tablayout"
        android:background="@color/bgcolor_deep"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_order_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>