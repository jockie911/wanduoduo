<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40_dip"
        android:text="@string/re_men_cheng_shi"
        android:gravity="center_vertical"
        android:background="@color/bgcolor"
        android:textColor="@color/white"
        android:drawablePadding="@dimen/dimen_7_dip"
        android:drawableLeft="@drawable/location_select_hot"
        android:paddingLeft="@dimen/dimen_15_dip"/>

    <com.wanduoduo.widget.MyGridView
        android:id="@+id/mgv_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_13_dip"
        android:layout_marginBottom="@dimen/dimen_27_dip"
        android:layout_marginRight="@dimen/dimen_45_dip"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:numColumns="3"
        android:horizontalSpacing="@dimen/dimen_20_dip"
        android:verticalSpacing="@dimen/dimen_10_dip"
        android:scrollbars="none"/>
</LinearLayout>