<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_115_dip"
        android:background="@color/bgcolor">
        <ImageView
            android:id="@+id/iv_item_pic"
            android:layout_width="@dimen/dimen_68_dip"
            android:layout_height="@dimen/dimen_90_dip"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:layout_centerVertical="true"
            android:background="@drawable/moive_default_pic"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_item_pic"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_14_dip"
            android:layout_marginRight="@dimen/dimen_50_dip"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/c_208_208_208"
                tools:text="你的名字"/>
            <TextView
                android:id="@+id/tv_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/c_208_208_208"
                android:maxLines="2"
                android:ellipsize="marquee"
                android:layout_marginTop="@dimen/dimen_12_dip"
                tools:text="刘德华张学友领刘德华张学友领衔主演刘德华张学友领衔主演刘德华张学友领衔主演刘德华张学友领衔主演"/>
            <TextView
                android:id="@+id/tv_item_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/dimen_9_dip"
                android:textColor="@color/c_208_208_208"
                tools:text="评分9.0"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb"
            android:layout_width="@dimen/dimen_23_dip"
            android:layout_height="@dimen/dimen_23_dip"
            android:button="@drawable/pay_cb_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:layout_marginRight="@dimen/dimen_15_dip"/>

        <View style="@style/divide_line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</FrameLayout>