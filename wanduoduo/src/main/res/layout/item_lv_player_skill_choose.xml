<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <ImageView
       android:id="@+id/iv_player_skill_choose"
       android:layout_width="@dimen/dimen_90_dip"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/dimen_15_dip"
       android:src="@drawable/skill_instrument"/>
    <com.wanduoduo.widget.MyGridView
        android:id="@+id/mgv_player_skill_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:verticalSpacing="@dimen/dimen_15_dip"
        android:horizontalSpacing="@dimen/dimen_22_dip"
        android:layout_marginBottom="@dimen/dimen_25_dip"
        android:layout_marginTop="@dimen/dimen_15_dip"
        android:numColumns="3"/>
    <View style="@style/divide_line" />
</LinearLayout>