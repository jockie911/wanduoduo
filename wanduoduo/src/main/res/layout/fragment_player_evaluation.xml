<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor_deep">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:gravity="center_vertical">

        <Button android:id="@+id/btn_all"
            android:text="全部"
            style="@style/tv_evaluation_player"
            android:layout_marginLeft="@dimen/dimen_0_dip"
            android:textColor="@color/white"
            android:background="@drawable/shape_btn_selected"/>
        <Button android:id="@+id/btn_prefect"
            android:text="很满意"
            style="@style/tv_evaluation_player" />
        <Button android:id="@+id/btn_ok"
            android:text="满意"
            style="@style/tv_evaluation_player" />
        <Button android:id="@+id/btn_bad"
            android:text="差评"
            style="@style/tv_evaluation_player" />
    </LinearLayout>
    <View style="@style/divide_5dp"/>
   <FrameLayout
       android:id="@+id/content_container"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>
</LinearLayout>