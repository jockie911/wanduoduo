<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgcolor_deep"
    tools:context="com.wanduoduo.ui.info.InfoEditContentItemActivity">

    <include layout="@layout/base_title_bar"/>

    <RelativeLayout
        android:id="@+id/rel_nickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip"
        android:visibility="gone"
        android:background="@color/bgcolor"
        android:layout_marginTop="@dimen/dimen_5_dip">
        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_15_dip"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/c_127_130_134"
            android:textSize="16sp"
            android:textColorHint="@color/c_127_130_134"
            android:maxLength="10"
            android:textCursorDrawable="@drawable/et_cursor"
            android:hint="昵称限制在1~10个字"/>
        <ImageView
            android:id="@+id/iv_nickname_delete"
            android:layout_width="@dimen/dimen_16_dip"
            android:layout_height="@dimen/dimen_16_dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_close"
            android:layout_marginRight="@dimen/dimen_15_dip"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_career"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:divider="@null"
        android:scrollbars="none"
        android:background="@color/bgcolor"/>
</LinearLayout>
