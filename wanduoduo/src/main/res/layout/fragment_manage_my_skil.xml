<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor_deep">
    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_love"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45_dip"
        app:tabIndicatorColor="@color/c_mei_hong"
        android:background="@color/bgcolor"
        app:tabSelectedTextColor="@color/c_mei_hong"
        app:tabTextColor="@color/c_127_130_134"
        app:tabTextAppearance="@style/tablayout" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_love"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_5_dip"/>
</LinearLayout>