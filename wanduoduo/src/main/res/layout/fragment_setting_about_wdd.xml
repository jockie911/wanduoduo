<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/about_wdd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_100_dip"/>

    <TextView
        android:id="@+id/tv_version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/c_208_210_211"
        android:layout_below="@+id/iv_icon"
        android:layout_marginTop="@dimen/dimen_35_dip"
        android:layout_centerHorizontal="true"/>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="@dimen/dimen_10_dip">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp">
           <TextView
               android:id="@+id/tv_xieyi_1"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:text="@string/about_wdd_xieyi1"
               android:textSize="13sp"
               android:textColor="@color/c_208_210_211"
               android:gravity="center_vertical|right"
               android:paddingRight="@dimen/dimen_8_dip"/>

           <View
               android:layout_width="@dimen/dimen_0.5_dip"
               android:layout_height="@dimen/dimen_20_dip"
               android:layout_gravity="center_vertical"
               android:background="@drawable/info_divide_line_or"/>
           <TextView
               android:id="@+id/tv_xieyi_2"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:text="@string/about_wdd_xieyi2"
               android:textSize="13sp"
               android:textColor="@color/c_208_210_211"
               android:gravity="center_vertical|left"
               android:paddingLeft="@dimen/dimen_8_dip"/>
       </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wdd_desc"
            android:textColor="@color/c_127_130_134"
            android:layout_marginTop="@dimen/dimen_6_dip"
            android:layout_gravity="center_horizontal"/>
   </LinearLayout>
</RelativeLayout>