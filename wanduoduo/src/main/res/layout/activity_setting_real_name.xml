<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wanduoduo.ui.info.SettingRealNameActivity"
    android:background="@color/bgcolor">

    <include layout="@layout/base_title_bar"/>

    <com.wanduoduo.widget.ReboundsScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/setting_eg_idcard"
                android:translationY="-5dp"/>

            <com.wanduoduo.widget.MyGridView
                android:id="@+id/gv_id_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:layout_marginTop="@dimen/dimen_25_dip"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                android:layout_marginRight="@dimen/dimen_15_dip"
                android:horizontalSpacing="@dimen/dimen_10_dip" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/setting_eg_idcard_text"/>
        </LinearLayout>
    </com.wanduoduo.widget.ReboundsScrollView>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45_dip"
        android:textColor="@color/c_129_143_255"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@color/bottom_color"
        android:text="@string/ti_jiao"/>
</LinearLayout>
