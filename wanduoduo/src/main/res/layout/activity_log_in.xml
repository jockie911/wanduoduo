<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/marquee_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_login"
        android:orientation="vertical"
        tools:context=".ui.login.LogInActivity"
        android:background="@drawable/shape_login_psd_bg">

        <include layout="@layout/base_title_bar"/>

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/login_play_wirte"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50_dip"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_marginRight="@dimen/dimen_30_dip"
            android:layout_marginTop="@dimen/dimen_50_dip"
            android:background="@drawable/shape_login_bg_wirte">
            <FrameLayout
                android:layout_width="@dimen/dimen_63_dip"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/login_phone"/>
            </FrameLayout>
            <View
                android:layout_width="@dimen/dimen_0.5_dip"
                android:layout_height="@dimen/dimen_33_dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/info_divide_line_or"/>
            <EditText
                android:id="@+id/et_phone_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dimen_17_dip"
                android:background="@null"
                android:textSize="16sp"
                android:textColorHint="@color/white"
                android:inputType="number"
                android:maxLength="11"
                android:hint="@string/shou_ji_hao_ma"
                android:textColor="@color/white"/>
            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dimen_11_dip"
                android:src="@drawable/login_delete"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_get_sms_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50_dip"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_marginRight="@dimen/dimen_30_dip"
            android:layout_marginTop="@dimen/dimen_15_dip"
            android:visibility="gone"
            android:background="@drawable/shape_login_bg_wirte">
            <FrameLayout
                android:layout_width="@dimen/dimen_63_dip"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/login_open_smscode"/>
            </FrameLayout>
            <View
                android:layout_width="@dimen/dimen_0.5_dip"
                android:layout_height="@dimen/dimen_33_dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/info_divide_line_or"/>
            <EditText
                android:id="@+id/et_get_sms_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dimen_17_dip"
                android:background="@null"
                android:textSize="16sp"
                android:textColorHint="@color/white"
                android:maxLength="6"
                android:inputType="number"
                android:hint="@string/huo_qu_yan_zheng_ma"
                android:textColor="@color/white"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/dimen_10_dip"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_get_sms_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/dimen_6_dip"
                    android:paddingBottom="@dimen/dimen_6_dip"
                    android:paddingLeft="@dimen/dimen_8_dip"
                    android:paddingRight="@dimen/dimen_8_dip"
                    android:text="@string/huo_qu_yan_zheng_ma"
                     android:background="@drawable/shape_log_in_sms"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50_dip"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_marginRight="@dimen/dimen_30_dip"
            android:layout_marginTop="@dimen/dimen_15_dip"
            android:background="@drawable/shape_login_bg_wirte">
            <FrameLayout
                android:layout_width="@dimen/dimen_63_dip"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_sms_code_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/longin_block"/>
            </FrameLayout>
            <View
                android:layout_width="@dimen/dimen_0.5_dip"
                android:layout_height="@dimen/dimen_33_dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/info_divide_line_or"/>
            <EditText
                android:id="@+id/et_security_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dimen_17_dip"
                android:background="@null"
                android:textSize="16sp"
                android:textColorHint="@color/white"
                android:inputType="textPassword"
                android:hint="@string/mi_ma"
                android:maxLength="20"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ?/@,._'[]{}\|!#$%^()-+="
                android:textColor="@color/white"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/dimen_10_dip"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_psd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_close"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_sms_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/dimen_6_dip"
                    android:paddingBottom="@dimen/dimen_6_dip"
                    android:paddingLeft="@dimen/dimen_8_dip"
                    android:paddingRight="@dimen/dimen_8_dip"
                    android:text="@string/huo_qu_yan_zheng_ma"
                    android:visibility="gone"
                    android:background="@drawable/shape_log_in_sms"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50_dip"
            android:layout_marginRight="@dimen/dimen_30_dip"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:text="@string/deng_lu"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_30_dip"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_login_bg_wirte"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_marginRight="@dimen/dimen_30_dip"
            android:layout_marginTop="@dimen/dimen_25_dip">
            <TextView
                android:id="@+id/tv_forget_psw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/wang_ji_mi_ma"/>
            <TextView
                android:id="@+id/tv_use_sms_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/shi_yong_yan_zheng_ma_deng_lu"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_other_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <View
                android:layout_width="@dimen/dimen_100_dip"
                android:layout_height="@dimen/dimen_0.5_dip"
                android:background="@color/white"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/di_san_fang_deng_lu"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/dimen_20_dip"
                android:layout_marginLeft="@dimen/dimen_20_dip"/>
            <View
                android:layout_width="@dimen/dimen_100_dip"
                android:layout_height="@dimen/dimen_0.5_dip"
                android:background="@color/white"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_weixin_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_weixin"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_10_dip" />
        <TextView
            android:id="@+id/tv_wdd_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ying_si_tiao_kuan"
            android:textColor="@color/white"
            android:padding="@dimen/dimen_10_dip"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</RelativeLayout>
