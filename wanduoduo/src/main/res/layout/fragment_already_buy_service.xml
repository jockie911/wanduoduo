<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45_dip"
        android:background="@color/bgcolor_deep">
        <RelativeLayout
            android:id="@+id/rel_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/c_mei_hong"
                android:text="待确认"
                android:layout_marginTop="@dimen/dimen_15_dip"
                android:layout_centerHorizontal="true"/>
            <View
                android:id="@+id/v_all"
                android:layout_width="@dimen/dimen_45_dip"
                android:layout_height="@dimen/dimen_2_dip"
                android:background="@drawable/shape_ret_meihong"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_ing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_ing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/c_65_75_85"
                android:text="进行中"
                android:layout_marginTop="@dimen/dimen_15_dip"
                android:layout_centerHorizontal="true"/>
            <View
                android:id="@+id/v_ing"
                android:layout_width="@dimen/dimen_60_dip"
                android:layout_height="@dimen/dimen_2_dip"
                android:background="@drawable/shape_ret_meihong"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_discuss"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <View
                android:id="@+id/v_discuss"
                android:layout_width="@dimen/dimen_60_dip"
                android:layout_height="@dimen/dimen_2_dip"
                android:background="@drawable/shape_ret_meihong"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_discuss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/c_65_75_85"
                android:text="结束"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>