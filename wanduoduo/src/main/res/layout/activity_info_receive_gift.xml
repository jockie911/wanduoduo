<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgcolor_deep"
    tools:context="com.wanduoduo.ui.info.InfoReceiveGiftActivity">

    <include layout="@layout/base_title_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120_dip"
        android:background="@color/bgcolor">

        <TextView
            android:id="@+id/tv_tixian"
            android:layout_width="@dimen/dimen_100_dip"
            android:layout_height="@dimen/dimen_40_dip"
            android:background="@drawable/shape_server_time_item_bg"
            android:text="@string/ti_xian_zhi_yu_e"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_20_dip"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="right"
                    android:textColor="@color/c_208_210_211"
                    android:text="@string/wo_de_ren_qi_zhi"/>
                <TextView
                    android:id="@+id/tv_charming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/c_255_173_0"
                    android:layout_marginLeft="@dimen/dimen_15_dip"
                    android:text="0"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5_dip">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="right"
                    android:textColor="@color/c_208_210_211"
                    android:text="@string/ke_dui_huan"/>
                <TextView
                    android:id="@+id/tv_renqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/c_255_173_0"
                    android:layout_marginLeft="@dimen/dimen_15_dip"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_255_173_0"
                    android:text="å…ƒ"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView style="@style/tv_person_center"
        android:id="@+id/tv_gift_count"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:text="@string/wo_shou_dao_de_li_wu"/>

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:layout_height="wrap_content"/>

</LinearLayout>
