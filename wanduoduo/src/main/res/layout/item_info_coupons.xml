<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/dimen_15_dip"
    android:layout_marginRight="@dimen/dimen_15_dip"
    android:id="@+id/rel_coupons_bg"
    android:background="@drawable/info_coupsons_now">
    <LinearLayout
        android:id="@+id/item_coupons_bg"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_pass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_coupons_tv_rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rmb"
                    android:textSize="20sp"
                    android:layout_alignBottom="@+id/item_coupons_tv_money"
                    android:layout_marginBottom="@dimen/dimen_8_dip"
                    android:textColor="@color/c_239_83_90"/>
                <TextView
                    android:id="@+id/item_coupons_tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="45sp"
                    android:textColor="@color/c_239_83_90"
                    android:layout_toRightOf="@+id/item_coupons_tv_rmb" />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_coupons_tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="满88可用"
                android:textSize="12sp"
                android:textColor="@color/c_153_153_153"/>
        </LinearLayout>
        <View
            android:layout_width="@dimen/dimen_0.5_dip"
            android:layout_height="90dp"
            android:background="@drawable/coupons_divide"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_28_dip"
            android:paddingTop="@dimen/dimen_20_dip"
            android:paddingBottom="@dimen/dimen_20_dip"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/item_coupons_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yue_wan_quan"
                android:textSize="17sp"
                android:textColor="@color/c_102_102_102"/>
            <TextView
                android:id="@+id/item_coupons_tv_shiyong"
                style="@style/tv_info_coupons"
                android:text="@string/quan_ping_lei_shi_yong"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/item_coupons_tv_youxiaoqi"
                style="@style/tv_info_coupons"
                android:text="有效期至2016-10-01"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/coupons_pass"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:layout_margin="@dimen/dimen_10_dip"/>
</RelativeLayout>