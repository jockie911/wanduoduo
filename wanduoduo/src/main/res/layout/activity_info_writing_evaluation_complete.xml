<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bgcolor"
    tools:context="com.wanduoduo.ui.info.InfoWritingEvaluationCompleteActivity">

    <include layout="@layout/base_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bgcolor_deep">
        <com.wanduoduo.widget.CircleImageView
            android:id="@+id/civ_avatar"
            android:layout_width="@dimen/dimen_63_dip"
            android:layout_height="@dimen/dimen_63_dip"
            app:border_color="@color/white"
            app:border_width="@dimen/dimen_2_dip"
            android:src="@color/bgcolor"
            android:layout_marginTop="@dimen/dimen_15_dip"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:text="这是昵称"
            android:textSize="15sp"
            android:textColor="@color/c_127_130_134"
            android:layout_marginTop="@dimen/dimen_13_dip"/>

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25_dip"
            android:textSize="14sp"
            android:textColor="@color/c_216_163_0"
            android:layout_centerHorizontal="true"
            android:text="感谢您的评价,我会做的更好"
            android:layout_marginBottom="@dimen/dimen_50_dip"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

