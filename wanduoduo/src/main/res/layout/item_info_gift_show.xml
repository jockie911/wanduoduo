<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_gift_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45_dip"
        android:layout_marginBottom="@dimen/dimen_8_dip"/>

    <TextView
        android:id="@+id/tv_gift_count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_8_dip"
        android:layout_marginTop="@dimen/dimen_5_dip"
        android:background="@drawable/shape_info_gift_meihong_bg"/>
</RelativeLayout>