<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.info.InfoWritingEvaluationActivity"
    android:background="@color/bgcolor">

    <include layout="@layout/base_title_bar"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@color/bgcolor_deep">
       <com.wanduoduo.widget.CircleImageView
           android:id="@+id/civ_avatar"
           android:layout_width="@dimen/dimen_63_dip"
           android:layout_height="@dimen/dimen_63_dip"
           app:border_color="@color/white"
           app:border_width="@dimen/dimen_2_dip"
           android:layout_marginTop="@dimen/dimen_15_dip"
           android:layout_gravity="center_horizontal"/>

       <TextView
           android:id="@+id/tv_nickname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:textSize="15sp"
           android:textColor="@color/c_127_130_134"
           android:layout_marginTop="@dimen/dimen_13_dip"/>

       <RatingBar
           android:id="@+id/ratingbar"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:numStars="5"
           android:rating="5"
           android:stepSize="1"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="@dimen/dimen_23_dip"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginRight="@dimen/dimen_25_dip"
           android:layout_marginLeft="25dp"
           android:layout_marginBottom="@dimen/dimen_20_dip">
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dimen_0.5_dip"
               android:background="@color/bgcolor"
               android:layout_toLeftOf="@+id/tv_desc"
               android:layout_marginRight="@dimen/dimen_25_dip"
               android:layout_centerVertical="true"/>
           <TextView
               android:id="@+id/tv_desc"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="14sp"
               android:textColor="@color/c_216_163_0"
               android:layout_centerHorizontal="true"
               android:text="满意"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dimen_0.5_dip"
               android:background="@color/bgcolor"
               android:layout_centerVertical="true"
               android:layout_toRightOf="@+id/tv_desc"
               android:layout_marginLeft="@dimen/dimen_25_dip"/>
       </RelativeLayout>
   </LinearLayout>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/bgcolor_deep"
        android:layout_marginTop="@dimen/dimen_5_dip"
        android:paddingTop="@dimen/dimen_20_dip"
        android:paddingRight="@dimen/dimen_15_dip"
        android:paddingLeft="@dimen/dimen_15_dip"
        android:textSize="15sp"
        android:maxLength="50"
        android:textColor="@color/c_127_130_134"
        android:textColorHint="@color/c_65_75_85"
        android:hint="@string/discuss_hint_text"
        android:gravity="top|left"/>
    <TextView
        android:id="@+id/tv_num_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0/50"
        android:paddingRight="@dimen/dimen_15_dip"
        android:background="@color/bgcolor_deep"
        android:textColor="@color/c_65_75_85"
        android:paddingBottom="@dimen/dimen_10_dip"
        android:textSize="14sp"
        android:gravity="right"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:paddingRight="@dimen/dimen_15_dip"
        android:layout_marginTop="@dimen/dimen_15_dip">
        <CheckBox
            android:id="@+id/cb_ni_ming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/time_cb_selector"
            android:background="@null"
            android:layout_alignBottom="@+id/temp"
            android:layout_toLeftOf="@+id/temp"
            android:layout_toStartOf="@+id/temp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ni_ming_pin_lun"
            android:textSize="15sp"
            android:textColor="@color/c_127_130_134"
            android:id="@+id/temp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_submit_discuss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45_dip"
        android:text="@string/ti_jiap_ping_jia"
        android:gravity="center"
        android:textColor="@color/c_231_234_255"
        android:textSize="16sp"
        android:background="@color/prefection_send_bg"/>
</LinearLayout>
