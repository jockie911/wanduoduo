<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgcolor_deep_old">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/pay_order_info_icon"
            android:layout_marginLeft="@dimen/dimen_17_dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/c_208_210_211"
            android:layout_marginLeft="@dimen/dimen_42_dip"
            android:text="@string/ding_dan_xin_xi"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View style="@style/divide_line"
        android:layout_marginLeft="@dimen/dimen_42_dip"
        android:background="#1c2630"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip"
        android:layout_marginLeft="@dimen/dimen_42_dip">
        <TextView
            style="@style/tv_order_pay"
            android:textColor="@color/c_127_130_134"
            android:text="@string/yu_yue_shi_jian" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/c_208_210_211" />
    </LinearLayout>

    <View style="@style/divide_line"
        android:background="#1c2630"
        android:layout_marginLeft="@dimen/dimen_42_dip"/>
    <LinearLayout
        android:id="@+id/ll_root_place"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip"
        android:layout_marginLeft="@dimen/dimen_42_dip">
        <TextView
            style="@style/tv_order_pay"
            android:textColor="@color/c_127_130_134"

            android:text="@string/yu_yue_chang_di" />
        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/c_208_210_211" />
    </LinearLayout>
    <View android:id="@+id/v_invis"
        style="@style/divide_line"
        android:background="#1c2630"
        android:layout_marginLeft="@dimen/dimen_42_dip"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip"
        android:layout_marginLeft="@dimen/dimen_42_dip">
        <TextView
            style="@style/tv_order_pay"
            android:textColor="@color/c_127_130_134"
            android:text="@string/ding_dan_jin_e" />
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/c_208_210_211" />
    </LinearLayout>
    <View style="@style/divide_line"
        android:background="#1c2630"
        android:layout_marginLeft="@dimen/dimen_42_dip"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip"
        android:layout_marginLeft="@dimen/dimen_42_dip">
        <TextView
            style="@style/tv_order_pay"
            android:textColor="@color/c_127_130_134"
            android:text="@string/ding_dan_biao_hao" />
        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/c_208_210_211" />
    </LinearLayout>
</LinearLayout>