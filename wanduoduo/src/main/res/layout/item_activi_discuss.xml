<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dimen_13_dip"
    android:paddingLeft="@dimen/dimen_15_dip"
    android:background="@color/bgcolor1">

    <com.wanduoduo.widget.CircleImageView
        android:id="@+id/civ_avatar"
        android:layout_width="@dimen/dimen_35_dip"
        android:layout_height="@dimen/dimen_35_dip"
        app:border_width="@dimen/dimen_0_dip"
        android:src="@drawable/photo_default"/>
    <LinearLayout
        android:id="@+id/temp_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/civ_avatar"
        android:layout_marginLeft="@dimen/dimen_10_dip"
        android:layout_marginRight="@dimen/dimen_15_dip">
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/c_208_210_211"/>
        <ImageView
            android:id="@+id/iv_vip_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dip"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:textSize="13sp"
            android:textColor="@color/c_127_130_134"/>
    </LinearLayout>

   <TextView
       android:id="@+id/tv_content"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/temp_ll"
       android:layout_toRightOf="@+id/civ_avatar"
       android:layout_marginLeft="@dimen/dimen_10_dip"
       android:layout_marginTop="@dimen/dimen_15_dip"
       android:textSize="15sp"
       android:textColor="@color/c_208_210_211"
       android:layout_marginBottom="@dimen/dimen_15_dip"
       android:layout_marginRight="@dimen/dimen_15_dip"/>

    <View style="@style/divide_line"
        android:layout_margin="@dimen/dimen_0_dip"
        android:layout_alignParentBottom="true"
        android:background="#323e4a"/>
</RelativeLayout>