<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_ll_time"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgcolor_deep">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_15_dip">
        <TextView android:id="@+id/tv_week1"
            style="@style/tv_week" android:text="今天"/>
        <TextView android:id="@+id/tv_week2"
            style="@style/tv_week" />
        <TextView
            android:id="@+id/tv_week3"
            style="@style/tv_week" />
        <TextView android:id="@+id/tv_week4"
            style="@style/tv_week" />
        <TextView android:id="@+id/tv_week5"
            style="@style/tv_week" />
        <TextView android:id="@+id/tv_week6"
            style="@style/tv_week" />
        <TextView android:id="@+id/tv_week7"
            style="@style/tv_week" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView android:id="@+id/tv_time_1" style="@style/tv_time" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView android:id="@+id/tv_time_2" style="@style/tv_time" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView android:id="@+id/tv_time_3" style="@style/tv_time" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView android:id="@+id/tv_time_4" style="@style/tv_time" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView android:id="@+id/tv_time_5" style="@style/tv_time" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView android:id="@+id/tv_time_6" style="@style/tv_time" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView android:id="@+id/tv_time_7" style="@style/tv_time" />
        </RelativeLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/gv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_15_dip"
        android:paddingLeft="@dimen/dimen_20_dip"
        android:paddingRight="@dimen/dimen_20_dip"
        android:paddingBottom="@dimen/dimen_10_dip"
        android:numColumns="4"
        android:scrollbars="none"/>

    <RelativeLayout
        android:id="@+id/rel_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:layout_marginBottom="@dimen/dimen_10_dip">
        <CheckBox
            android:id="@+id/cb_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/time_cb_selector"
            android:background="@null"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quan_xuan"
            android:layout_toRightOf="@+id/cb_all"
            android:layout_marginLeft="@dimen/dimen_8_dip"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textColor="@color/c_127_130_134"/>
    </RelativeLayout>
</LinearLayout>