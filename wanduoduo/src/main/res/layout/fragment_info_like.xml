<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor_deep">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bottom_color">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_25_dip"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <ImageView
                android:id="@+id/iv_left_title_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dimen_15_dip"
                android:paddingRight="@dimen/dimen_25_dip"
                android:src="@drawable/icon_back"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout_love"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tabIndicatorColor="#00000000"
                android:layout_marginLeft="@dimen/dimen_50_dip"
                android:layout_marginRight="@dimen/dimen_50_dip"
                app:tabSelectedTextColor="@color/c_mei_hong"
                app:tabTextColor="@color/c_208_210_211"
                app:tabTextAppearance="@style/tablayout" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_love"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>