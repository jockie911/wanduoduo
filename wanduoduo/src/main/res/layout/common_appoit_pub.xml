<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/rel_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45_dip">
        <TextView
            style="@style/info_style_textdrawable"
            android:text="@string/xing_bie"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/appoint_pub_sex"/>

        <TextView
            android:id="@+id/tv_sex_all"
            style="@style/tv_on_line_sort"
            android:layout_width="@dimen/dimen_45_dip"
            android:textSize="12sp"
            android:layout_height="@dimen/dimen_28_dip"
            android:text="@string/bu_xian"
            android:layout_marginRight="@dimen/dimen_125_dip" />

        <RelativeLayout
            android:id="@+id/rel_male"
            android:layout_width="@dimen/dimen_45_dip"
            android:layout_height="@dimen/dimen_28_dip"
            android:background="@drawable/shape_radius_5_414b55_online"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_70_dip"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/icon_male"
                android:drawablePadding="@dimen/dimen_3_dip"
                android:textSize="12sp"
                android:text="@string/nan" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_female"
            android:layout_width="@dimen/dimen_45_dip"
            android:layout_height="@dimen/dimen_28_dip"
            android:background="@drawable/shape_radius_5_414b55_online"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_15_dip"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/icon_female"
                android:drawablePadding="@dimen/dimen_3_dip"
                android:textSize="12sp"
                android:text="@string/nv" />
        </RelativeLayout>
        <View style="@style/divide_line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/rel_sort"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45_dip">
        <TextView
            style="@style/info_style_textdrawable"
            android:text="@string/fei_yong"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/appoint_pub_fee"/>
        <TextView
            android:id="@+id/tv_buy_aa"
            style="@style/tv_on_line_sort"
            android:layout_width="@dimen/dimen_45_dip"
            android:layout_height="@dimen/dimen_28_dip"
            android:textSize="12sp"
            android:text="AA"
            android:layout_marginRight="@dimen/dimen_15_dip" />
        <TextView
            android:id="@+id/tv_buy_me"
            style="@style/tv_on_line_sort"
            android:layout_width="@dimen/dimen_55_dip"
            android:layout_height="@dimen/dimen_28_dip"
            android:textSize="12sp"
            android:text="@string/wo_mai_dan"
            android:layout_marginRight="@dimen/dimen_135_dip" />
        <TextView
            android:id="@+id/tv_buy_they"
            style="@style/tv_on_line_sort"
            android:layout_width="@dimen/dimen_55_dip"
            android:layout_height="@dimen/dimen_28_dip"
            android:textSize="12sp"
            android:text="@string/qiu_mai_dan"
            android:layout_marginRight="@dimen/dimen_70_dip" />
    </RelativeLayout>

    <View style="@style/divide_5dp"
        android:background="@color/bgcolor_deep"/>
    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80_dip"
        android:background="@null"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:layout_marginTop="@dimen/dimen_16_dip"
        android:layout_marginBottom="@dimen/dimen_5_dip"
        android:textColor="@color/c_208_210_211"
        android:textColorHint="@color/c_127_130_134"
        android:hint="@string/sui_xin_yue_sui_xin_shuo"
        android:textSize="15sp"
        android:textCursorDrawable="@drawable/et_cursor"
        android:maxLength="200"
        android:gravity="left|top"/>
    <TextView
        android:id="@+id/tv_content_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0/200"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:gravity="right"
        android:textColor="@color/c_127_130_134"
        android:textColorHint="@color/c_127_130_134"/>
    <com.wanduoduo.widget.MyGridView
        android:id="@+id/mgv_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dimen_15_dip"
        android:paddingLeft="@dimen/dimen_15_dip"
        android:horizontalSpacing="@dimen/dimen_10_dip"
        android:layout_marginBottom="@dimen/dimen_15_dip"
        android:verticalSpacing="@dimen/dimen_10_dip"/>

    <View style="@style/divide_5dp"
        android:background="@color/bgcolor_deep"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55_dip"
        android:gravity="center_vertical">
        <TextView
            style="@style/info_style_textdrawable"
            android:text="@string/tian_jia_biao_qian"
            android:drawablePadding="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xuan_tian"
            android:textColor="@color/c_127_130_134"
            android:layout_marginLeft="@dimen/dimen_3_dip"/>
    </LinearLayout>

    <com.wanduoduo.widget.MyGridView
        android:id="@+id/mgv_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_marginRight="@dimen/dimen_15_dip"
        android:layout_marginBottom="@dimen/dimen_50_dip"
        android:horizontalSpacing="@dimen/dimen_8_dip"
        android:numColumns="5"
        android:verticalSpacing="@dimen/dimen_5_dip"/>
</LinearLayout>