<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgcolor"
    tools:context=".ui.info.BindMobliePhoneActivity">

    <include layout="@layout/base_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_365_dip"
        android:orientation="vertical"
        android:background="@color/bgcolor_deep"
        android:paddingLeft="@dimen/dimen_15_dip"
        android:paddingRight="@dimen/dimen_15_dip"
        android:paddingTop="@dimen/dimen_35_dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_53_dip"
            android:orientation="horizontal"
            android:background="@drawable/shape_radius_5_818fff"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                android:textSize="16sp"
                android:textColor="@color/c_65_75_85"
                android:text="@string/shou_ji_hao"
                android:layout_marginRight="@dimen/dimen_9_dip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12_dip"
                android:textSize="16sp"
                android:textColor="@color/c_65_75_85"
                android:text="+86" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dimen_16_dip"
                android:textSize="17sp"
                android:textColor="@color/c_208_210_211"
                android:text="18655388161"
                android:background="@null"
                android:textCursorDrawable="@drawable/et_cursor"
                android:gravity="center_vertical"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_53_dip"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_15_dip">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/shape_radius_5_414b55">
                <TextView
                    android:layout_width="@dimen/dimen_80_dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_15_dip"
                    android:textSize="16sp"
                    android:textColor="@color/c_65_75_85"
                    android:text="@string/yan_zheng_ma"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    tools:text="123456"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/et_cursor"
                    android:textColor="@color/c_208_210_211"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/dimen_20_dip"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="@string/huo_qu_yan_zheng_ma"
                android:textSize="16sp"
                android:textColor="@color/c_129_143_255"
                android:gravity="center"
                android:background="@drawable/shape_radius_5_818fff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_53_dip"
            android:layout_marginTop="@dimen/dimen_15_dip"
            android:background="@drawable/shape_radius_5_414b55">
            <TextView
                android:layout_width="@dimen/dimen_80_dip"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_15_dip"
                android:textSize="16sp"
                android:textColor="@color/c_65_75_85"
                android:text="@string/mi_ma"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="17sp"
                tools:text="123456"
                android:textCursorDrawable="@drawable/et_cursor"
                android:background="@null"
                android:textColor="@color/c_208_210_211"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_11_dip"
                android:src="@drawable/btn_open"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_53_dip"
            android:text="@string/xia_yi_bu"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginTop="@dimen/dimen_55_dip"
            android:background="@drawable/shape_moblie_tv_bg_blue"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:textColor="@color/c_65_75_85"
        android:textSize="14sp"
        android:drawablePadding="@dimen/dimen_10_dip"
        android:drawableLeft="@drawable/icon_warning"
        android:text="@string/moblie_msg"/>

</LinearLayout>
